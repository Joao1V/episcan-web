{
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "^react",
    "next",
    "<THIRD_PARTY_MODULES>",
    "^@/lib/(.*)$",
    "^@/components/(.*)$",
    "^@/assets/(.*)$",
    "^@/app/(.*)$",
    "^./(.*)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "bracketSpacing": true,
  "printWidth": 100,
  "tabWidth": 3,
  "singleQuote": true,
  "semi": true,
  "bracketSameLine": false,
  "singleAttributePerLine": false,
  "experimentalTernaries": true
}