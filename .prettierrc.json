{
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ],
  "importOrder": [
      "^react",
      "next",
      "<THIRD_PARTY_MODULES>",
      "^@/components/(.*)$",
      "^@/assets/(.*)$",
      "^@/app/(.*)$",
      "^@/features/(.*)$",
      "^@/services/(.*)$",
      "^@/libs/(.*)$",
      "^./(.*)$",
      "^[^\\u0000-\\u007F]",
      "^type"
   ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "bracketSpacing": true,
  "printWidth": 100,
  "tabWidth": 3,
  "singleQuote": true,
  "semi": true,
  "bracketSameLine": false,
  "singleAttributePerLine": false,
  "experimentalTernaries": true
}